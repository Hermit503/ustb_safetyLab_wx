page{
  height: 100%;
  background-color: gainsboro;
}
.UCenter-bg {
  background-image: url(https://cdn.nlark.com/yuque/0/2019/png/280373/1569319056453-assets/web-upload/b70f536a-ff63-4ecd-ac8e-e0d301d4166b.png);
